<Page
    x:Class="CityCareApp.Signin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CityCareApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Image HorizontalAlignment="Left" Height="218" Margin="95,88,0,0" VerticalAlignment="Top" Width="221"/>
        <Rectangle  HorizontalAlignment="Left"  Height="191" Margin="95,88,0,0" Stroke="Black" VerticalAlignment="Top" Width="203"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#575757" Margin="95,360,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="203"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#575757" Margin="95,416,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="203"/>
        <Button x:Name="signin" HorizontalAlignment="Left" BorderBrush="#575757" Margin="138,500,0,0" VerticalAlignment="Top" Width="108">
            <TextBlock Text="Sign in" HorizontalAlignment="Center"  Foreground="#575757" Width="66"/>
        </Button>

    </Grid>
    
    
</Page>
